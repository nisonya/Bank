<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_scarlet"
    android:orientation="vertical"
    tools:context=".Transaction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/more"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="63dp"
            android:layout_height="40dp"
            android:onClick="Main"
            app:icon="@drawable/back"
            app:iconSize="40dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_slab"
            android:text="Переводы"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/morea"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="63dp"
            android:layout_height="36dp"
            app:iconSize="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_slab"
            android:paddingLeft="15dp"
            android:text="Введите карту получателя"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/getter_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/roboto_slab"
            android:inputType="phone"
            android:paddingLeft="15dp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_slab"
            android:paddingLeft="15dp"
            android:text="Выберите карту для списания"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:paddingLeft="15dp" />

        <TextView
            android:id="@+id/balance_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_slab"
            android:paddingLeft="15dp"
            android:text="Баланс: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_slab"
            android:paddingLeft="15dp"
            android:text="Введите сумму перевода"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/roboto_slab"
            android:inputType="numberDecimal"
            android:paddingLeft="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/roboto_slab"
        android:onClick="makeTransition"
        android:text="Перевести" />


</LinearLayout>

